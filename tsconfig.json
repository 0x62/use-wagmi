{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2021", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@wagmi/core": ["packages/vue/node_modules/@wagmi/core/dist"],
      "use-wagmi": ["packages/vue/src"],
      "use-wagmi/*": ["packages/vue/src/*"],
      // TODO: Remove once issue is fixed
      // https://github.com/microsoft/TypeScript/issues/48212
      "abitype": ["packages/vue/node_modules/abitype/dist"],
      "vue-demi": ["packages/vue/node_modules/vue-demi/lib"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2021",
    "types": [
      "node",
      // TODO: Remove once issue is fixed
      // https://github.com/microsoft/TypeScript/issues/42873
      "@ethersproject/providers",
      "@ethersproject/abstract-signer"
    ]
  },
  "exclude": ["**/node_modules/**", "**/dist/**"],
  "include": [
    "examples/**/*",
    "packages/**/*",
    "scripts/**/*",
    "**/vitest.config.ts"
  ]
}
